{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "firstname": {
      "type": "string",
      "minLength": 2
    },
    "lastname": {
      "type": "string",
      "minLength": 2
    },
    "email": {
      "type": "string",
      "format":"email"
    },
    "password": {
      "type": "string",
      "minLength":6,
      "maxLength": 40
    }
  },
  "required": [
    "firstname",
    "lastname",
    "email",
    "password"
  ]
}